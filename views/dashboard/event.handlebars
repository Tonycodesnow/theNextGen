<h1 class="animate__animated animate__slideInLeft">Welcome
  {{event.user.firstName}}
  {{event.user.lastName}}
</h1>

<div class="row mt-4 animate__animated animate__fadeIn animate__delay-1s">
  <div class="col-12">
    <div class="d-flex justify-content-center mb-3">
      <h2>Members</h2>
    </div>
    {{#each event.members}}
      <div class="card card-event mb-2">
        <div class="card-body">
          <div class="d-flex justify-content-between mb-3">
            <div>
              <h3 class="title">{{firstName}}
                {{lastName}}
              </h3>
            </div>
            <div>
              {{#if accepted}}
                <span class="badge rounded-pill bg-success">Accepted</span>
              {{else}}
                <span class="badge rounded-pill bg-warning">Waiting</span>
              {{/if}}

            </div>

          </div>
          <div class="d-flex justify-content-end">
            <a href="/event/{{id}}" class="btn event-button mx-2">
              <i class="fas fa-paper-plane"></i>
              Send Invitation
            </a>
            <a
              href="/dashboard/member-wishlist/{{id}}"
              class="btn event-button"
            >
              <i class="fas fa-list-alt"></i>
              Wishlist
            </a>

          </div>
        </div>
      </div>
    {{/each}}
  </div>
</div>