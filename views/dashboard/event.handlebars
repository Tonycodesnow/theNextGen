<h1 class="animate__animated animate__slideInLeft">Welcome
  {{event.user.first_name}}
  {{event.user.last_name}}
</h1>

<div class="card card-event mb-2">
  <div class="card-body">
    <div class="d-flex align-items-center justify-content-between">
      <div>
        <h3 class="title">{{event.name}}</h3>
      </div>
      <div>
        <a href="../lottery/{{event.id}}" class="btn btn-giftby">
          <i class="fas fa-random"></i>
          Lottery
        </a>
      </div>
    </div>
    <div class="d-flex justify-content-start">
      <div>
        <i class="fas fa-gifts orange-color"></i>
        {{daysLeft event.party_date}}
      </div>

    </div>
    <hr class="my-1" />
    <p class="description main-color">{{event.description}}</p>
    <div class="d-flex flex-column justify-content-start">
      <div class="mb-2">
        <i class="fas fa-gifts main-color"></i>
        Party Date:
        {{event.party_date}}
      </div>
      <div>
        <i class="fas fa-random orange-color"></i>
        Lottery Date:
        {{event.lottery_date}}
      </div>

    </div>
  </div>
</div>

<div class="row mt-4 animate__animated animate__fadeIn animate__delay-1s">
  <div class="col-12">
    <div class="d-flex justify-content-center mb-3">
      <h2>Members</h2>
    </div>
    {{#each event.members}}
      <div class="card card-event mb-2">
        <div class="card-body">
          <div class="d-flex justify-content-between mb-3">
            <div>
              <h3 class="title">{{name}}
                
              </h3>
            </div>
            <div>
              {{#if accepted}}
                <span class="badge rounded-pill bg-success">Accepted</span>
              {{else}}
                <span class="badge rounded-pill bg-warning">Waiting</span>
              {{/if}}

            </div>

          </div>
          <div class="d-flex justify-content-end">
            <a href="/event/{{id}}" class="btn event-button mx-2">
              <i class="fas fa-paper-plane"></i>
              Send Invitation
            </a>
            <a
              href="/dashboard/member-wishlist/{{id}}"
              class="btn event-button"
            >
              <i class="fas fa-list-alt"></i>
              Wishlist
            </a>

          </div>
        </div>
      </div>
    {{/each}}
  </div>
</div>