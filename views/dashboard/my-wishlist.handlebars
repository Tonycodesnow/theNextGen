<div class="d-flex justify-content-end">
  <a href="/dashboard">
    <i class="fas fa-angle-double-left"></i>
    Back
  </a>
</div>
<h1 class="my-3">
  {{user.first_name}}
  {{user.last_name}}, add items to your wishlist</h1>

<div class="row">
  <div class="col-12">
    <div class="form-floating mb-1">
      <input
        type="text"
        class="form-control my-input"
        id="name"
        placeholder="Name"
        required
        maxlength="50"
      />
      <label for="name">Name</label>
    </div>
  </div>
  <div class="col-12">
    <div class="form-floating mb-1">
      <input
        type="text"
        class="form-control my-input"
        id="item_url"
        placeholder="Url"
        maxlength="255"
      />
      <label for="item_url">Url</label>
    </div>
  </div>
  <div class="col-12 mt-3">
    <div class="d-flex justify-content-center">
      <button
        type="button"
        class="btn main-button btn-lg btn-block"
        id="buttonAddItem"
      >
        <i class="fas fa-plus"></i>
        Add
      </button>
    </div>
  </div>
</div>

<div class="container-fluid my-items shadow-lg mt-3">
  <div class="row mt-4">
    <div class="d-flex justify-content-center">
      <h2 class="mb-3">{{user.first_name}} Wishlist</h2>
    </div>
  </div>

  <div class="row" id="divItems">

  </div>

</div>

<script src="/js/my-wishlist.js"></script>