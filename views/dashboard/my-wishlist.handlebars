<h1 class="mb-3">My Wishlist</h1>

<div class="row">
  <div class="col-12">
    <div class="form-floating mb-1">
      <input
        type="text"
        class="form-control my-input"
        id="name"
        placeholder="Item Name"
        required
        maxlength="50"
      />
      <label for="email">Item Name</label>
    </div>
  </div>
  <div class="col-12">
    <div class="form-floating mb-1">
      <input
        type="text"
        class="form-control my-input"
        id="item_url"
        placeholder="Item Url"
        maxlength="255"
      />
      <label for="email">Item Url</label>
    </div>
  </div>
  <div class="col-12 mt-3">
    <div class="d-flex justify-content-center">
      <button
        type="button"
        class="btn main-button btn-lg btn-block"
        id="buttonAddItem"
      >
        <i class="fas fa-plus"></i>
        Add
      </button>
    </div>
  </div>
</div>

<div class="container-fluid my-items shadow">
  <div class="row mt-4">
    <div class="d-flex justify-content-center">
      <h2 class="mb-3">My List</h2>
    </div>
  </div>

  <div class="row" id="divItems">

  </div>

</div>

<script src="/js/my-wishlist.js"></script>