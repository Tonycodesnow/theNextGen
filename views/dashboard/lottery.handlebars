


<div class="card card-event mb-2">
  <div class="card-body">
    <div class="d-flex align-items-center justify-content-start">
      <div>
        <h3 class="title">{{event.name}}</h3>
      </div>
    </div>
    <div class="d-flex justify-content-start">
      <div>
        <i class="fas fa-gifts orange-color"></i>
        {{daysLeft event.party_date}}
      </div>

    </div>
    <hr class="my-1" />
    <p class="description main-color">{{event.description}}</p>
    <div class="d-flex flex-column justify-content-start">
      <div class="mb-2">
        <i class="fas fa-gifts main-color"></i>
        Party Date:
        {{event.party_date}}
      </div>
      <div>
        <i class="fas fa-random orange-color"></i>
        Lottery Date:
        {{event.lottery_date}}
      </div>
    </div>
  </div>
</div>

<div class="row mt-4 animate__animated animate__fadeIn animate__delay-1s">
  <div class="d-flex justify-content-center">
    <button type="button" id="buttonPlayLottery" class="btn main-button btn-lg">
      <i class="fas fa-random"></i>
      Play Lottery
    </button>
  </div>
</div>

  <div class="d-flex flex-column align-items-center hide-element" id="divAnimation">
   <lottie-player
      src="https://assets10.lottiefiles.com/datafiles/bNwYPnjv3OdFA5w/data.json"
      background="transparent"
      speed="1"
      style="width: 300px; height: 300px;"
      autoplay loop
    ></lottie-player>
    <div>
        <h3><span id="textAnimate"></span></h3>
    </div>
  </div>
</div>

<script src="/js/lottery.js"></script>