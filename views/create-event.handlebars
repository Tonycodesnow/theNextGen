<div class="d-flex justify-content-center mb-3">
  <h1 class="sub-title fade-in-text">
    Create Your Event
  </h1>
</div>
<div class="row">
  <div class="col-12">
    <form class="form">
      <div class="form-floating mb-3">
        <input
          type="text"
          class="form-control my-input"
          id="name"
          placeholder="Event Name"
          required
        />
        <label for="name">Event Name</label>
      </div>
      <div class="form-floating mb-3">
        <textarea
          class="form-control"
          placeholder="Event description"
          id="description"
        ></textarea>
        <label for="description">Description</label>
      </div>
      <div class="form-floating mb-3">
        <input
          type="number"
          class="form-control my-input"
          id="budget"
          placeholder="Budget"
          required
          style="text-align: right;"
        />
        <label for="budget">Budget</label>
      </div>
      <div class="form-floating mb-3">
        <input
          type="date"
          class="form-control my-input"
          id="lottery_date"
          placeholder="Lottery Date"
          required
        />
        <label for="lottery_date">Lottery Date</label>
      </div>
      <div class="form-floating mb-3">
        <input
          type="date"
          class="form-control my-input"
          id="party_date"
          placeholder="Party Date"
          required
        />
        <label for="party_date">Party Date</label>
      </div>
      <div class="d-flex justify-content-center mt-3">
        <button class="btn main-button btn-lg btn-block">
          Next
          <i class="fas fa-angle-double-right"></i>
        </button>
      </div>
      <div class="d-flex justify-content-center mt-3">
        <div class="alert alert-danger" role="alert">
          <span class="alert-text">this is the text</span>
        </div>
      </div>
    </form>
  </div>
</div>

<script src="/js/create-event.js"></script>